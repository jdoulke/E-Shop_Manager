<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:text="Αναζήτηση Προϊόντος"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_search_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Εισάγεται το αναγνωριστικό προϊόντος"
        android:inputType="number" />

    <Button
        android:id="@+id/product_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttons_background"
        android:text="Αναζήτηση Προϊόντος" />

    <TextView
        android:id="@+id/product_search_id_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Αναγνωριστικό:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_search_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Προϊόν:"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/product_search_category_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Κατηγορία:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_search_stock_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Αποθέματα:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_search_price_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Αξία:"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
